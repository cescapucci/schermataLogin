<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" prefHeight="465.0" prefWidth="342.0" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.schermatalogin.LoginController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label fx:id="textControllo" text="controllo" />
   <HBox alignment="TOP_CENTER" prefHeight="43.0" prefWidth="170.0">
      <children>
         <Label text="User">
            <padding>
               <Insets right="15.0" />
            </padding></Label>
         <TextField fx:id="textUser" alignment="BOTTOM_RIGHT" />
      </children>
   </HBox>
   <HBox alignment="TOP_CENTER" prefHeight="32.0" prefWidth="302.0">
      <children>
         <Label text="Password">
            <font>
               <Font size="14.0" />
            </font>
            <padding>
               <Insets right="15.0" />
            </padding>
         </Label>
         <PasswordField fx:id="textPassword" />
      </children>
   </HBox>
   <Button mnemonicParsing="false" onAction="#login" text="accedi" />
   <Label text="non sei un utente? registrati" />
   <Button fx:id="registrati" mnemonicParsing="false" onAction="#registrati" text="registrati" />
</VBox>
